generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MODERATOR
  USER
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  lastName  String
  firstName String
  birthDate DateTime
  nick      String?
  postcode  String
  city      String
  address   String
  mobile    String
  role      Role
  orders    Order[]
}

model Order {
  id            Int            @id @default(autoincrement())
  orderDate     DateTime       @default(now())
  postcode      String
  city          String
  address       String
  price         Int
  user          User           @relation(fields: [userId], references: [id])
  userId        Int
  productOrders ProductOrder[]
}

model ProductOrder {
  id        Int     @id @default(autoincrement())
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  discount  Int?
  quantity  Int
}

model Product {
  id                Int            @id @default(autoincrement())
  name              String
  category          String
  subCategory       String
  brand             String
  discount          String
  volume            Int
  alcoholPercentage Int
  description       String
  images            String
  price             Int
  productOrders     ProductOrder[]
  productWares      ProductWare[]
}

model ProductWare {
  id          Int       @id @default(autoincrement())
  product     Product   @relation(fields: [productId], references: [id])
  productId   Int
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id])
  warehouseId Int
  quantity    Int
}

model Warehouse {
  id           Int           @id @default(autoincrement())
  name         String
  postcode     String
  city         String
  address      String
  capacity     Int
  productWares ProductWare[]
}
